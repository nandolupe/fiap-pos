<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="br.com.fiap.projetohibernate.datatypes.TipoItem" table="TIPO_ITEM" catalog="ecommerce">
		<id name="idTipoItem" type="int">
			<column name="ID_TIPO_ITEM" />
			<generator class="assigned" />
		</id>
		<cache  usage = "read-write" /> 
		<property name="dscTipoItem" type="string">
			<column name="DSC_TIPO_ITEM" length="100" />
		</property>
	</class>
</hibernate-mapping>