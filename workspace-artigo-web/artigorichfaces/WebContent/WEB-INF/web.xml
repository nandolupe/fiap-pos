<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>artigorichfaces</display-name>
  <welcome-file-list>
  	<!-- IDENTIFICA O PONTO DE ENTRADA DA APLICAÇÃO -->
    <welcome-file>index.faces</welcome-file>
  </welcome-file-list>
  
  <!-- DEFINE A SERVLET DE LEITURA E CONFIGURAÇÃO DO FACES -->
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <!-- MAPEAMENTO DA SERVLET PARA IDENTIFICAR A QUAL ARQUIVOS IRÁ IDENTIFICAR COMO FACES -->
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.faces</url-pattern>
  </servlet-mapping>
</web-app>