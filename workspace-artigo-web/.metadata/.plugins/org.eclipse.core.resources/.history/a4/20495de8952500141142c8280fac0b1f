					<br />
					<table id="tab">
						<tr>
							<td>Nome:</td>
							<td><h:inputText value="#{clienteMB.cliente.nameCliente}" /></td>
						</tr>
						<tr>
							<td>Data Nascimento:</td>
							<td><rich:calendar value="#{clienteMB.cliente.dtNasc}" datePattern="dd/MM/yyyy"></rich:calendar></td>
						</tr>
						<tr>
							<td>Endereço:</td>
							<td><h:inputText value="#{clienteMB.cliente.endereco}" /></td>
						</tr>
						<tr>
							<td>Celular:</td>
							<td><h:inputText value="#{clienteMB.cliente.celular}" /></td>
						</tr>
					</table>
					
					<a4j:commandButton value="Cadastrar" action="#{clienteMB.salvarCliente}" render="tabela" />
					<br />	
					<rich:dataTable id="tabela" var="us" value="#{clienteMB.clienteList}">
						<rich:column>
							<f:facet name="header">ID</f:facet>
							<h:outputText value="#{us.idCliente}" />
						</rich:column>
						<rich:column>
							<f:facet name="header">NOME</f:facet>
							<h:outputText value="#{us.nameCliente}" />
						</rich:column>
						<rich:column>
							<f:facet name="header">Data Nascimento</f:facet>
							<h:outputText value="#{us.dtNasc}">
								<f:convertDateTime pattern="dd/MM/yyyy" />
							</h:outputText>
						</rich:column>
						<rich:column>
							<f:facet name="header">Endereço</f:facet>
							<h:outputText value="#{us.endereco}" />
						</rich:column>
						<rich:column>
							<f:facet name="header">Celular</f:facet>
							<h:outputText value="#{us.celular}" />
						</rich:column>
						<rich:column headerText=" ">
							<a4j:commandLink actionListener="#{clienteMB.removerCliente}" render="tabela">
								Remover
								<f:setPropertyActionListener target="#{clienteMB.cliente}" value="#{us}" />
							</rich:commandLink>
						</rich:column>
					</rich:dataTable>
				</rich:panel>
			</a4j:region>
