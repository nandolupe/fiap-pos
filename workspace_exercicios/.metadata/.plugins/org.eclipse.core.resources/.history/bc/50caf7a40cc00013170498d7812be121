		ResultSet rs = null;

		try {
			ps = connection.prepareStatement(query);
			rs = ps.executeQuery();

			while (rs.next()) {

			}

		} catch (SQLException e) {
			System.out.println("Ocorreu um erro ao acessar os dados de funcionario!");
			e.printStackTrace();
		}

		return null;
	}
}
